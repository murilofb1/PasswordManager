<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:layout_margin="5dp"
    android:outlineProvider="bounds"
    android:background="@drawable/recycler_passwords_background"
    android:backgroundTint="@color/white"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_icon_recycler"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        app:shapeAppearance="@style/RoundedImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_name_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/img_icon_recycler"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/txt_password_recycler"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnCopyPassword"
        app:layout_constraintStart_toEndOf="@id/img_icon_recycler"
        app:layout_constraintTop_toTopOf="@id/img_icon_recycler"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_password_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/txt_name_recycler"
        android:layout_alignStart="@id/txt_name_recycler"
        android:gravity="center_horizontal"
        android:text="@string/masked_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_name_recycler"
        app:layout_constraintStart_toStartOf="@id/txt_name_recycler"
        app:layout_constraintTop_toBottomOf="@id/txt_name_recycler" />


    <ImageButton
        android:id="@+id/imgBtnCopyPassword"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
